<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@id/registration_username_text"
        android:layout_marginTop="72dp"
        android:hint="Username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@id/registration_email_text"
        android:hint="Email Adress"
        android:layout_below="@id/registration_username_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@id/registration_password_text"
        android:hint="Password"
        android:layout_above="@id/registration_confpassword_text"
        android:layout_alignRight="@id/register_button"
        android:layout_alignEnd="@id/register_button" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@id/registration_confpassword_text"
        android:hint="Confirm Password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/registration_email_text"
        android:layout_alignStart="@id/registration_email_text" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:fontFamily="sans-serif-light"
        android:id="@id/register_button"
        android:layout_below="@id/registration_confpassword_text"
        android:layout_alignRight="@id/registration_confpassword_text"
        android:layout_alignEnd="@id/registration_confpassword_text"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:fontFamily="sans-serif-light"
        android:id="@id/cancel_registration_button"
        android:layout_alignTop="@id/register_button"
        android:layout_alignLeft="@id/registration_confpassword_text"
        android:layout_alignStart="@id/registration_confpassword_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:fontFamily="sans-serif-light"
        android:id="@id/copyright_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:layout_marginTop="10dp" />

</RelativeLayout>