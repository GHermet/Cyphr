<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/nyc_cyphr">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@id/forgotpassword_email_text"
        android:layout_marginTop="66dp"
        android:hint="Email Adress"
        android:layout_below="@id/forgotpassword_return_buttton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@id/forgotpassword_email_send_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:fontFamily="sans-serif-light"
        android:id="@id/forgotpassword_email_send_button"
        android:layout_alignTop="@id/forgotpassword_email_text"
        android:layout_alignBottom="@id/forgotpassword_email_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/abc_ab_stacked_solid_light_holo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/forgotpassword_return_buttton"
        android:src="@drawable/abc_ic_ab_back_holo_light"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Light.Base.ActionButton.Overflow"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>